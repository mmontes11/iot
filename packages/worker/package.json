{
  "name": "iot-worker",
  "version": "1.0.6",
  "description": "ES6 NodeJS worker that subscribes to MQTT topics from IoT server and sends notifications to BIoT",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/index.js --exec babel-node",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist/*",
    "prebuild": "npm run clean",
    "build": "babel -d dist/ src/",
    "production": "cross-env NODE_ENV=production node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmontes11/iot-worker.git"
  },
  "keywords": [
    "js",
    "javascript",
    "es6",
    "babel",
    "nodejs",
    "npm",
    "mongodb",
    "winston",
    "docker",
    "iot",
    "internet-of-thing",
    "iot-worker",
    "mqtt"
  ],
  "author": "Mart√≠n Montes <martin11lrx@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmontes11/iot-worker/issues"
  },
  "homepage": "https://github.com/mmontes11/iot-worker#readme",
  "dependencies": {
    "async-mqtt": "^1.0.1",
    "cross-env": "^5.1.3",
    "dotenv": "^8.0.0",
    "http-status": "^1.0.1",
    "mongodb": "^3.0.5",
    "mqtt-match": "^1.0.3",
    "node-persist": "^2.1.0",
    "restler": "^3.4.0",
    "underscore": "^1.8.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint-config-mmontes11-node": "^1.0.5",
    "nodemon": "^1.14.8"
  }
}
